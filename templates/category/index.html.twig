{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
</style>

<div>
    <h1>Categories ✅</h1>
    <a href="category/create" class="btn btn-info text-white">
        <i class="bi bi-plus-circle"></i>
    </a>

   
    {% if categories is empty %}
    <p>Aucune catégorie disponible.</p>
    {% else %}
 <table class="table table-striped table-hover w-75 mx-auto">
  <thead>
    <tr>
      <th scope="col">Titre</th>
      <th scope="col">Nombre d'article</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
   {% for category in categories %}
    <tr>
        <td> {{ category.title }} </td>
        <td>{{category.articles|length}}</td>
        <td>
                <a href="category/{{ category.id }}" class="btn btn-info text-white">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="category/{{ category.id }}/edit" class="btn btn-primary text-white">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a href="category/{{ category.id }}/delete" class="btn btn-danger text-white">
                    <i class="bi bi-trash3"></i>
                </a>
        </td>
    </tr>
     {% endfor %}
  </tbody>
</table>
    {% endif %}
</div>
{% endblock %}
