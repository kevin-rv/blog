{% extends 'base.html.twig' %}

{% block title %}Mise à jour de la catégorie: {{ category.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('app_category') }}" class="btn btn-danger text-white mb-4">
        <i class="bi bi-arrow-left-circle"></i> Retour aux catégories
    </a>

    <h1 class="display-4 text-center mb-4">Mise à jour de la catégorie: <span class="text-primary">{{ category.title }}</span></h1>

    <div class="card p-4 shadow-sm">
        <h2 class="h4 mb-4">Modifier les informations de la catégorie</h2>
        {{ form(form) }}
    </div>

    <h3 class="mt-5">Articles associés ✅</h3>
    {% if category.articles is empty %}
        <div class="alert alert-warning" role="alert">
            Aucun article associé à cette catégorie.
        </div>
    {% else %}
        <ul class="list-group mt-3">
            {% for article in category.articles %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('one_article', {'articleId': article.id}) }}" class="text-decoration-none">
                        {{ article.title }}
                    </a>
                    <span class="badge bg-primary rounded-pill">
                        {{ article.updatedAt|date('d/m/Y') }}
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
