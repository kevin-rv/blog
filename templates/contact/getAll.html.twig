{% extends 'base.html.twig' %}

{% block title %}Vos Contacts{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Vos Contacts âœ…</h1>

    {% if contacts is empty %}
        <p class="text-center text-muted">Aucun contact disponible.</p>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded-3">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Message</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.message|slice(0, 50) }}{% if contact.message|length > 50 %}...{% endif %}</td>
                            <td>
                                <a href="contact/{{ contact.id }}" class="btn btn-info text-white btn-sm">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="contact/{{ contact.id }}/delete" class="btn btn-danger text-white btn-sm">
                                    <i class="bi bi-trash3"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
