{% extends 'base.html.twig' %}

{% block title %}Vos Contact{% endblock %}

{% block body %}

<div>
    <h1>Mes Contact âœ…</h1>
       {% if contacts is empty %}
    <p>Aucun contact disponible.</p>
    {% else %}
 <table class="table table-striped table-hover w-75 mx-auto">
  <thead>
    <tr>
      <th scope="col">email</th>
      <th scope="col">message</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
   {% for contact in contacts %}
    <tr>
        <td> {{ contact.email }} </td>
        <td>{{contact.message}}</td>
        <td>
                <a href="contact/{{ contact.id }}" class="btn btn-info text-white">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="contact/{{ contact.id }}/delete" class="btn btn-danger text-white">
                    <i class="bi bi-trash3"></i>
                </a>
        </td>
    </tr>
     {% endfor %}
  </tbody>
</table>
    {% endif %}
</div>  
{% endblock %}