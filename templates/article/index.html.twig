{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>

</style>

<div>
    <h1 class="">Articles ✅</h1>
    <a href="article/create" class="btn btn-info text-white">
   <i class="bi bi-plus-circle"></i>
    </a>
    {% if articles is empty %}
    <p>Aucun article disponible.</p>
    {% else %}
        {% for article in articles %}
{#            {{ dump(article) }}#}
{#            {{ dump(article.createdAt|date('à H:i le d-m-Y')) }}#}
{#            {{ dump(article.createdAt|date('l d F Y à H:i'))}}#}
            <div class="container d-flex justify-content-center mt-5">
                <div class="card mb-3" >
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="..." class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><a href="article/{{ article.id }}">{{ article.title }}</a></h5>
                                <p class="card-text">{{ article.contentPreview }}...</p>
                                <p class="card-text"><small class="text-body-secondary">Last updated {{ article.createdAt|date('l d F Y à H:i') }}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    {% endif %}
</div>
{% endblock %}
