{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="/articleAdmin" class="btn btn-danger text-white mb-3">
        <i class="bi bi-backspace"></i> Retour
    </a>
    <h1 class="mb-4">{{ article.title }}</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-3">
                {% if article.image %}
                    <img src="{{ asset('uploads/images/' ~ article.image) }}" class="img-fluid float-start me-3" alt="Image de l'article" style="max-height: 300px; object-fit: cover;">
                {% endif %}
                <p class="card-text">{{ article.content }}</p>
                <p class="text-muted"><small>Créé le : {{ article.createdAt.date|date('d/m/Y à H:i') }}</small></p>
                <p class="text-muted"><small>Dernière mise à jour : {{ article.updatedAt.date|date('d/m/Y à H:i') }}</small></p>
            </div>
        </div>
    </div>

    <div class="mb-3">
        {% if article.category is empty %}
            <p class="text-warning">Aucune catégorie associée.</p>
        {% else %}
            <p><strong>Catégorie :</strong> {{ article.category.title }}</p>
        {% endif %}
        
        {% if article.user is empty %}
            <p class="text-muted">Créateur : Anonyme</p>
        {% else %}
            <p><strong>Créé par :</strong> {{ article.user.username }}</p>
        {% endif %}
    </div>
</div>
{% endblock %}
