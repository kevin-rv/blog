{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="d-flex flex-column" style="height: 100vh;">

    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="card shadow-lg rounded" style="max-width: 400px; width: 100%;">
            <div class="card-body p-4">
                <h1 class="h3 mb-4 font-weight-normal text-center">Inscription</h1>

                <form method="post">
                    <div class="mb-3">
                        <label for="inputUsername" class="form-label">Nom d'utilisateur</label>
                        <input type="text" name="username" id="inputUsername" class="form-control form-control-lg" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="btn btn-link">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
